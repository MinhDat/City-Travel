<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_timkiem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="edu.hcmus.minhdat.citytravel.activities.timkiem"
    android:weightSum="1">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#ffffff">

        <Button
            android:id="@+id/btn_back_edit_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_toolbar_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Edit Profile"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_marginLeft="50dp"/>

        <Button
            android:id="@+id/btn_save_edit_profile"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:text="Save"
            android:textSize="20sp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"/>
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/imageview_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin20"
        android:background="#FF99FF"/>

    <EditText
        android:id="@+id/edittext_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/boder_edittext"
        android:layout_marginTop="@dimen/margin30"/>

    <EditText
        android:id="@+id/edittext_sodienthoai"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/boder_edittext"
        android:layout_marginTop="@dimen/margin10"/>

    <EditText
        android:id="@+id/edittext_email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/boder_edittext"
        android:layout_marginTop="@dimen/margin10"
        android:layout_weight="0.04" />

    <EditText
        android:id="@+id/edittext_gioitinh"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/boder_edittext"
        android:layout_marginTop="@dimen/margin10"/>

    <EditText
        android:id="@+id/edittext_diachi"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/boder_edittext"
        android:layout_marginTop="@dimen/margin10"/>

</LinearLayout>