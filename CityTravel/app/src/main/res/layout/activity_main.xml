<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.hcmus.minhdat.citytravel.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/admin"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="338dp"
            android:weightSum="1">



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="0.17">
                <ImageButton
                    android:id="@+id/ibtnSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@drawable/ic_search"
                    android:layout_margin="2dp"
                    android:padding="5dp"/>

                <EditText
                    android:id="@+id/edtSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Search"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:padding="5dp"/>

            </LinearLayout>

            <ListView
                android:id="@+id/lvDsDichVu"
                android:layout_width="match_parent"
                android:layout_height="181dp"
                android:layout_weight="0.78">
            </ListView>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorBlue"
                android:layout_weight="0.24">

                <ImageButton
                    android:id="@+id/ibtnTrangChu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ic_page"
                    android:padding="5dp"
                    android:layout_margin="5dp"/>
                <ImageButton
                    android:id="@+id/ibtnDiaDiem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ic_subject"
                    android:padding="5dp"
                    android:layout_margin="5dp"/>
                <ImageButton
                    android:id="@+id/ibtnLichSu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ic_history"
                    android:padding="5dp"
                    android:layout_margin="5dp"/>
                <ImageButton
                    android:id="@+id/ibtnThongTinUser"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ic_account"
                    android:padding="5dp"
                    android:layout_margin="5dp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
