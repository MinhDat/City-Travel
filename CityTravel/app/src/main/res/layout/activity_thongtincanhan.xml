<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_thongtincanhan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.hcmus.minhdat.citytravel.activities.Thongtincanhan">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#1a27e2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/linearLayout">


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/avata"
            android:src="@drawable/abc_ic_star_black_36dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btn_edit"
            android:layout_marginTop="-55dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:src="@android:drawable/ic_menu_edit"
            android:background="#1a27e2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="-30dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="User name"
            android:textColor="#FFFFFF"
            android:id="@+id/username"
            android:layout_marginTop="-70dp"
            android:layout_gravity="center_horizontal"
            android:foreground="@color/abc_background_cache_hint_selector_material_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Address"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="95dp"
            android:id="@+id/textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Member"
            android:id="@+id/textView"
            android:textColor="#FFFFFF"
            android:layout_marginRight="45dp"
            android:layout_marginTop="-5dp"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />



    </LinearLayout>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/PhoneNumber"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="20dp"
        android:src="@android:drawable/sym_action_call" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageEmail"
        android:src="@android:drawable/sym_action_email"
        android:layout_centerVertical="true"
        android:layout_marginBottom="50dp"
        android:layout_alignLeft="@+id/PhoneNumber"
        android:layout_alignStart="@+id/PhoneNumber" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageDate"
        android:layout_marginBottom="-10dp"
        android:src="@android:drawable/presence_away"
        android:layout_above="@+id/imageGioiTinh"
        android:layout_alignLeft="@+id/imageEmail"
        android:layout_alignStart="@+id/imageEmail" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageGioiTinh"
        android:layout_marginTop="48dp"
        android:src="@android:drawable/ic_menu_myplaces"
        android:layout_below="@+id/BirthDateText"
        android:layout_alignLeft="@+id/imageDate"
        android:layout_alignStart="@+id/imageDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="01643894687"
        android:id="@+id/PhoneNumber_Text"
        android:layout_marginLeft="-100dp"
        android:layout_alignBottom="@+id/PhoneNumber"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email"
        android:id="@+id/EmailText"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/PhoneNumber_Text"
        android:layout_alignStart="@+id/PhoneNumber_Text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ngay sinh"
        android:id="@+id/BirthDateText"
        android:layout_below="@+id/imageEmail"
        android:layout_alignLeft="@+id/EmailText"
        android:layout_alignStart="@+id/EmailText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gioi tinh"
        android:id="@+id/GioiTinhText"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@+id/imageGioiTinh"
        android:layout_alignLeft="@+id/BirthDateText"
        android:layout_alignStart="@+id/BirthDateText" />

</RelativeLayout>
