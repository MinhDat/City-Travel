<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/idQLTK_Adapter">

    <LinearLayout
        android:id="@+id/idQuanLy_TaiKhoan_Adapter"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/adapter_margin">
        <ImageView
            android:id="@+id/imvQLTK_Adapter"
            android:layout_width="@dimen/adapter_margin"
            android:layout_height="@dimen/adapter_margin"
            android:layout_margin="@dimen/image_margin"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvHoten"
                android:layout_width="@dimen/adapter_text_width"
                android:layout_height="@dimen/adapter_text_hight" />
            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="@dimen/adapter_text_width"
                android:layout_height="@dimen/adapter_text_hight" />
        </LinearLayout>

        <Button
            android:id="@+id/btnQLDelete"
            android:layout_width="@dimen/adapter_margin"
            android:layout_height="@dimen/adapter_margin"
            android:text="Delete"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_margin"
        android:layout_margin="@dimen/image_margin"
        android:background="@color/colorDark"/>
</LinearLayout>